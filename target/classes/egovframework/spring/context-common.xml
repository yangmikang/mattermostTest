<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
        

    <context:component-scan base-package="egovframework,kr.go.distep">
       <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller" />
    </context:component-scan>

	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>classpath:/egovframework/message/message-common</value>
				<value>classpath:/egovframework/rte/fdl/idgnr/messages/idgnr</value>
				<value>classpath:/egovframework/rte/fdl/property/messages/properties</value>
			</list>
		</property>
		<property name="cacheSeconds">
			<value>60</value>
		</property>
	</bean>
	
	<bean id="leaveaTrace" class="egovframework.rte.fdl.cmmn.trace.LeaveaTrace">
		<property name="traceHandlerServices">
			<list>
				<ref bean="traceHandlerService" />
			</list>
		</property>
	</bean>

	<bean id="traceHandlerService" class="egovframework.rte.fdl.cmmn.trace.manager.DefaultTraceHandleManager">
		<property name="reqExpMatcher">
			<ref bean="antPathMater" />
		</property>
		<property name="patterns">
			<list>
				<value>*</value>
			</list>
		</property>
		<property name="handlers">
			<list>
				<ref bean="defaultTraceHandler" />
			</list>
		</property>
	</bean>
	
	<bean id="antPathMater" class="org.springframework.util.AntPathMatcher" />
	<bean id="defaultTraceHandler" class="egovframework.rte.fdl.cmmn.trace.handler.DefaultTraceHandler" />
	<bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
	
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
    <property name="host" value="smtp.gmail.com"/>
	    <property name="port" value="587"/>
	    <property name="username" value="GINISecretariat@gmail.com"/>
	    <property name="password" value="szltysykvvafivnd"/>
    
	    <property name="javaMailProperties">
	        <props>
	            <prop key="mail.transport.protocol">smtp</prop>
		        <prop key="mail.smtp.auth">true</prop>
		        <prop key="mail.smtp.starttls.enable">true</prop>
		        <prop key="mail.smtp.starttls.required">true</prop>
		        <prop key="mail.smtp.ssl.protocols">TLSv1.2</prop>
		        <prop key="mail.smtp.ssl.trust">smtp.gmail.com</prop>
		        <prop key="mail.debug">false</prop>
		        <prop key="mail.smtp.connectiontimeout">30000</prop> <!-- 연결 타임아웃 (ms) -->
		        <prop key="mail.smtp.timeout">30000</prop>           <!-- 응답 타임아웃 (ms) -->
		        <prop key="mail.smtp.writetimeout">30000</prop>      <!-- 쓰기 타임아웃 (ms) -->
	        </props>
	    </property>
	</bean>
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
	    <property name="maxUploadSize" value="10485760"/> <!-- 10MB -->
	</bean>
	 
</beans>
