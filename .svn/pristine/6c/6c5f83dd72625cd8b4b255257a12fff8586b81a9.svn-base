    	  a.className = "a";
    	  a.innerHTML =
    	    '<a>' + text + '</a>';
    	  todaycont.appendChild(a);  
	      return;
	    }

	    const now = new Date();
	    now.setHours(0, 0, 0, 0); 
	    const nowStr = formatDateToYYYYMMDD(now);

	    const ongoingEvents = res.filter(function(event) {
	      const start = new Date(event.startDatetime || event.start);
	      const end = new Date(event.endDatetime || event.end);
	      start.setHours(0, 0, 0, 0);
	      end.setHours(0, 0, 0, 0);
	      return start <= now && now <= end;
	    });

	    console.log("ongoingEvents", ongoingEvents);

