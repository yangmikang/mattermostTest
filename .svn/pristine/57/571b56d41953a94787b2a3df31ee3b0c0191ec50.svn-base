	            long fileGroupNo = this.uploadService.multiImageUpload(uploadFiles);
	            calendar.setFileGroupNo(fileGroupNo);
	        }

	        log.info("insertCalendar ì‹¤í–‰ ì§ì „ íŒŒë¼ë¯¸í„°: {}", calendar);

