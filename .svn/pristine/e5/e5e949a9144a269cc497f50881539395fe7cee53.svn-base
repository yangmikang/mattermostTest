	<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
    
    function getFlagIcon(cityCode) {
    	  switch (cityCode) {
    	    case "01": return 'ico_korea.svg';
    	    case "02": return 'ico_germany.svg';
    	    case "03": return 'ico_spain.svg';
    	    case "04":
    	    case "05": return 'ico_usa.svg';
    	    default: return '';
    	  }
    	}
	let calendar;
	let allEvents = [];
	let currentMonthStart = null;
	let currentMonthEnd = null;
	document.addEventListener("DOMContentLoaded", () => {
		  const dayNames = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];
		  const today = new Date();

		  const year = today.getFullYear();
		  const month = (today.getMonth() + 1).toString().padStart(2, '0');
		  const date = today.getDate().toString().padStart(2, '0');
		  const day = dayNames[today.getDay()];

		  const fullDateStr = `\${year}.\${month}.\${date} (\${day})`;
		  document.getElementById("todayFullDate").textContent = fullDateStr;
		});


	function formatDateString(dateInput) {
		  const date = new Date(dateInput);
		  if (isNaN(date)) return "-";
		  const year = date.getFullYear();
		  const month = (date.getMonth() + 1).toString().padStart(2, "0");
		  const day = date.getDate().toString().padStart(2, "0");
		  return `\${year}.\${month}.\${day}`; // ← 수정된 부분
		}


	
	document.addEventListener('DOMContentLoaded', function () {
	  const calendarEl = document.getElementById('calendar');
	
	  calendar = new FullCalendar.Calendar(calendarEl, {
	    locale: 'en',
	    initialView: 'dayGridMonth',
	    selectable: false,
	    editable: false,
	    headerToolbar: {
	      left: 'title',
	      right: 'prev today next'
	    },
	
	    datesSet: function (info) {
	      currentMonthStart = info.startStr;
	      currentMonthEnd = info.endStr;
	      loadCalendarList(1);
	    },
	
	
	    events: function(info, successCallback) {
	    	  fetch('${pageContext.request.contextPath}/calendar/events.do')
	    	    .then(response => response.json())
	    	   .then(data => {
	    		   
	    	/* 	   switch (ev.organizer) {
	       	    case "GINI": return 'ico_korea.svg';
	       	    case "City of Daejeon": return 'ico_korea.svg';
	       	    case "GINI": return 'ico_korea.svg';
	       	    case "City of Dortmund": return 'ico_germany.svg';
	       	    case "03": return 'ico_spain.svg';
	       	    case "04":
	       	    case "05": return 'ico_usa.svg';
	       	    default: return ''; */
			  const mappedEvents = data.map(ev => ({
			    id: ev.id,
			    title: ev.title,
			    start: new Date(ev.start),
			    end: new Date(ev.end),
			    allDay: true,
			    extendedProps: {
			      eventDescription: ev.description,
			      organizer: ev.organizer,
			      eventStatus: ev.eventStatus ? ev.eventStatus.toUpperCase() : "",
			      location: ev.location,
			      contact: ev.contact
			    }
			  }));
			
			  allEvents = mappedEvents;
			  successCallback(mappedEvents);
			  displayTodayEvents();     
			});

	    	}

	
	  });
	
	  calendar.render();
	}); 
