<script>

$(document).ready(function() {
    $(".approval-btn").on('click', function() {
        var userId = $(this).data('userid');
        var value = $(this).data('value');

        var url = '${pageContext.request.contextPath}/updateUserRole.do';
        var params = {
            id: userId,
            appr_yn: value,
            page:${currentPage}
        };  

        if (value === 'ADMIN') {
            url = '${pageContext.request.contextPath}/grantAdminRole.do';
            params = { id: userId, page:${currentPage} };
        }   

        var form = $('<form></form>');
        form.attr("method", "post");
        form.attr("action", url);

        $.each(params, function(key, val) {
            var input = $("<input>").attr("type", "hidden").attr("name", key).val(val);
            form.append(input);
        });

        $("body").append(form);
        form.submit();
    });
    
    $(".role-radio").on("change", function() {
        const userId = $(this).data("id");
        const newRole = $(this).val();
        const page = $(this).data("page");

        $.ajax({
          type: "POST",
          url: "${pageContext.request.contextPath}/updateUserType.do", 
          data: {
            id: userId,
            role: newRole,
            page: page
          },
          success: function(response) {
            console.log("권한 변경 성공:", userId, newRole);
            alert("The user's role has been updated successfully.");
            location.reload();
          },
          error: function(xhr, status, error) {
            console.error("권한 변경 실패:", error);
            alert("Failed to update the user's role. Please try again.");
          }
        });
      });
    
    $(".btn-delete").click(function() {
        const userId = $(this).data("id");
        if(confirm("Are you sure you want to delete this user?")) {
          $.ajax({
            type: "POST",
            url: "${pageContext.request.contextPath}/deleteUser.do",
            data: { id: userId },
			success: function(response) {
	            console.log("회원 삭제 성공:", userId);
	            alert("User has been deleted successfully.");
	            location.reload();
	          },
	          error: function(xhr, status, error) {
	            console.error("회원 삭제 실패:", error);
	            alert("Failed to delete user. Please try again.");
	          }
          });
        }
      });
    
    $(".btn-passwdReset").click(function() {
        const userId = $(this).data("id");
        if(confirm("Are you sure you want to reset the password?")) {
          $.ajax({
