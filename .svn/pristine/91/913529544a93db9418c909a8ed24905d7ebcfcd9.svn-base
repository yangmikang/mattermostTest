function saveName(code) {
	  var newName = document.getElementById('name_input_' + code).value;

	  var xhr = new XMLHttpRequest();
	  xhr.open('POST', '${pageContext.request.contextPath}/updateBoardMasterName.do', true);
	  xhr.setRequestHeader('Content-Type', 'application/json;charset=UTF-8');

	  xhr.onreadystatechange = function () {
	    if (xhr.readyState === XMLHttpRequest.DONE) {
	      if (xhr.status === 200) {
	        var response = JSON.parse(xhr.responseText);
	        if (response.success) {
	          alert('Changes have been saved.');

	          // UI 변경
	          document.getElementById('name_display_' + code).textContent = newName;
	          document.getElementById('name_display_' + code).style.display = 'inline-block';
	          document.getElementById('name_input_' + code).style.display = 'none';
	          document.getElementById('btn_edit_' + code).style.display = 'inline-block';
	          document.getElementById('btn_save_' + code).style.display = 'none';
	        } else {
	          alert('Unable to save changes. : ' + (response.message));
	        }
	      } else {
	        alert('Unable to save changes.' + xhr.status);
	      }
	    }
	  };

	  var data = {
	    boardMasterCode: code,
	    boardMasterName: newName
	  };

	  xhr.send(JSON.stringify(data));
	}
	
function updateUseYn(code, checkbox) {
	  var isChecked = checkbox.checked;
