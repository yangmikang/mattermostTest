						<c:if test="${user.appr_yn eq 'Y'}">
<!-- 							The member is already approved. -->
							<button type="button" class="approval-btn btn sm reject active" data-userid="${user.id}" data-value="N">Cancel Approval</button>
						</c:if>
						<c:if test="${user.appr_yn eq 'R'}">
<!-- 							The member has been marked as rejected -->
							<button type="button" class="approval-btn btn sm reject active" data-userid="${user.id}" data-value="N">Cancel Rejection</button>
