						    <input type="radio" name="role${user.id}" id="chk_O_${user.id}" value="O"
						           data-id="${user.id}" data-page="${currentPage}"
						           class="role-radio"
						           <c:if test="${user.role eq 'O'}">checked="checked"</c:if> />
						    <label style="font-size: 10pt;" for="chk_O_${user.id}">Organization Member</label>
