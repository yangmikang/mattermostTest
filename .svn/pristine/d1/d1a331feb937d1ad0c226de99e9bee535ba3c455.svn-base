<%@ page language="java" contentType="text/html; charset=EUC-KR"
	pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<html>
<style>
    .tabs {
        display: flex;
        border-bottom: 2px solid #ddd;
        margin-bottom: 20px;
    }

    .tab {
        padding: 10px 20px;
        cursor: pointer;
        border: 1px solid #ddd;
        border-bottom: none;
        background-color: #f9f9f9;
        margin-right: 5px;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }

    .tab.active {
        background-color: #fff;
        border-bottom: 2px solid #fff;
        font-weight: bold;
    }

    .tab-content {
        border: 1px solid #ddd;
        padding: 20px;
        display: none;
    }

    .tab-content.active {
        display: block;
    }
    .approval-btn {
        padding: 8px 16px;
        margin-right: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #f2f2f2;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s;
    }

    .approval-btn:hover {
        background-color: #e0e0e0;
    }

    .approval-btn.approve {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
    }

    .approval-btn.reject {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }
    
    .approval-btn.admin {
        color: #fff;
        background-color: #ffc107;
        border-color: #ffc107;
    }
    
    table.auth-table {
        border-collapse: collapse;
        width: 100%;
    }
    table.auth-table th, table.auth-table td {
        border: 1px solid #ccc;
        padding: 5px;
        text-align: center;
    }
    table.auth-table th {
        background-color: #f2f2f2;
    }
</style>
