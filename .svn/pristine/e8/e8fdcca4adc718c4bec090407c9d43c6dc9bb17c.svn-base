<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<style>
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
    margin: 20px 0;
}

.page-link {
    padding: 8px 14px;
    border: 1px solid #ddd;
    background-color: #f9f9f9;
    color: #333;
    text-decoration: none;
    border-radius: 6px;
    font-size: 13px;
    transition: background-color 0.2s, color 0.2s; 
}
  
.page-link:hover {
    background-color: #eaeaea;
}

.page-link.active {
    background-color: #333;
    color: #fff;
    border-color: #333;
    cursor: default;
    pointer-events: none;
}  
</style>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>   
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %> 
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<c:if test="${not empty errorMessage}">
    <script>
        alert("${errorMessage}");
    </script>
</c:if> 
<!-- 컨테이너 영역 -->
		<div id="container">
			<div class="page-title-wrap visual img-joint">
				<div class="visual-filter"></div>
				<div class="inner">
					<!-- breadcrumb -->  
					<nav class="breadcrumb-wrap" aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="home"><a href="#" class="txt">Home</a></li>
							<li><a href="#" class="txt">Manage Users</a></li>
						</ol>
					</nav>
					<!-- breadcrumb --> 
					<!-- 페이지 타이틀 영역 -->  
					<div class="visual-area">
						<h2 class="h-tit">Manage Users</h2>
<!-- 						<p>This is an informational page summarizing Daejeon&#39;s key facts, strategic industries, major institutions, and contact information.</p> -->
					</div>  
				<!-- //페이지 타이틀 영역 -->
					
				</div>
			</div>
<!-- 로그인 영역 -->
<div class="inner">
	<div class="conts-area">
		<div class="conts-wrap">
			<div class="box-white">

    <!-- <h2 class="section-title">Manage Users</h2> -->
    <div class="tbl-wrap fixed-header-table"> 
	<table class="tbl col data">
		<caption>User Management</caption>
	      <colgroup>
	         <col style="width: 90px;">
	         <col style="width: auto;">
	         <col style="width: auto;">
	         <col style="width: auto">  
	         <col style="width: auto;">
	         <col style="width: auto">
	         <col style="width: auto;"> 
	         <col style="width: auto;"> 
	         <col style="width: auto">  
	      </colgroup>    
	      <thead>
	      <tr class="center">
	         <th scope="col">No</th>
	         <th scope="col">User ID</th> 
	         <th scope="col">Name</th>
	         <th scope="col">Email</th> 
	         <!-- <th scope="col">Local Government Name</th>   -->
	         <th scope="col">Local Government</th>   
	         <th scope="col">Reset Password</th>
	         <th scope="col">Member Type</th> 
	         <th scope="col">Approve&Reject</th> 
	         <th scope="col">Delete Account</th>  
	      </tr>
	      </thead>
	      <tbody>
		<c:forEach var="user" items="${userList}" varStatus="status">
            <tr>
				<td style="text-align: center;">${(offset) + status.index + 1}</td>
				<td style="text-align: center;">${user.id}</td>
				<td style="text-align: center;">${user.username}</td>
				<td>${user.email}</td>
				<td style="text-align: center;">
					<c:if test="${user.city_code ne '99'}">
						${user.city_name}
					</c:if>
					<c:if test="${user.city_code eq '99'}">
						${user.city_etc}  
					</c:if>
				</td>
				<td style="text-align: center;">
					<button type="button" class="btn-passwdReset btn xsm reject active" data-id="${user.id}">Reset Password</button>
				</td>
				<td class="align-left">
					<div class="td-flex" style="align-items:flex-start;">
						<c:if test="${user.role ne 'A'}">
						  	<div class="form-check">
							    <input type="radio" name="role${user.id}" id="chk_G_${user.id}" value="G"
							           data-id="${user.id}" data-page="${currentPage}"
							           class="role-radio"
							           <c:if test="${user.role eq 'G'}">checked="checked"</c:if> />
							    <label for="chk_G_${user.id}">General</label>
							  </div>
							  <div class="form-check">
							    <input type="radio" name="role${user.id}" id="chk_C_${user.id}" value="C"
							           data-id="${user.id}" data-page="${currentPage}"
							           class="role-radio"
							           <c:if test="${user.role eq 'C'}">checked="checked"</c:if> />
							    <label for="chk_C_${user.id}">Government</label>   
							  </div>
							  <div class="form-check">
							    <input type="radio" name="role${user.id}" id="chk_O_${user.id}" value="O"
							           data-id="${user.id}" data-page="${currentPage}"
							           class="role-radio"
							           <c:if test="${user.role eq 'O'}">checked="checked"</c:if> />
							    <label for="chk_O_${user.id}">Institution</label>
							  </div>
						  </c:if>
						  <c:if test="${user.role eq 'A'}">  
						  	Administrator
						  </c:if>
					  </div>
				</td>
				<td style="text-align: center;">
					<div class="td-flex">
						<c:if test="${user.role ne 'G' and user.role ne 'A'}">
							<c:if test="${user.appr_yn eq 'N'}">  
								<button type="button" class="approval-btn btn xsm approve active" data-userid="${user.id}" data-value="Y">Approve</button>
								<button type="button" class="approval-btn btn xsm reject active" data-userid="${user.id}" data-value="R">Reject</button>
								<button type="button" class="approval-btn btn xsm grant-admin active" data-userid="${user.id}" data-value="ADMIN">Assign Admin Role</button>
							</c:if> 
							<c:if test="${user.appr_yn eq 'Y'}">
	<!-- 							The member is already approved. -->
								<button type="button" class="approval-btn btn xsm reject active" data-userid="${user.id}" data-value="N">Cancel Approval</button>
							</c:if>
							<c:if test="${user.appr_yn eq 'R'}">
	<!-- 							The member has been marked as rejected -->
								<button type="button" class="approval-btn btn xsm reject active" data-userid="${user.id}" data-value="N">Cancel Rejection</button>
							</c:if>
			            </c:if>
			            <c:if test="${user.role eq 'A'}">
							<button type="button" class="approval-btn btn xsm grant-admin active" data-userid="${user.id}" data-value="REMOVEADMIN">Remove Admin Role</button>  
			            </c:if>
			            <c:if test="${user.role eq 'G'}">
			            General members do not require approval. <button type="button" class="approval-btn btn xsm grant-admin active" data-userid="${user.id}" data-value="ADMIN">Assign Admin Role</button>  
			            </c:if>
		            </div>
				</td>
				<td> 
					 <button type="button" class="btn-delete btn xsm reject active" data-id="${user.id}" title="Delete User">Delete</button>
				</td>
			</tr>
		</c:forEach>
		</tbody>
	</table>
</div>
		<c:set var="totalPages" value="${(totalCount + pageSize - 1) / pageSize}" />
		<c:set var="totalPagesInt" value="${fn:substringBefore(totalPages, '.')}" />
		
		<div class="pagination">
		    <%-- 이전 버튼 --%>
		    <c:if test="${currentPage > 1}">
		        <a href="?page=${currentPage - 1}&size=${pageSize}" class="page-link">Prev</a>
		    </c:if>
		
		    <%-- 페이지 번호 --%>
		    <c:forEach begin="1" end="${totalPagesInt}" var="i">
		        <c:choose>
		            <c:when test="${i == currentPage}">
		                <span class="page-link active">${i}</span>
		            </c:when>
		            <c:otherwise>
		                <a href="?page=${i}&size=${pageSize}" class="page-link">${i}</a>
		            </c:otherwise>
		        </c:choose>
		    </c:forEach>
		
		    <%-- 다음 버튼 --%>
		    <c:if test="${currentPage < totalPagesInt}">
		        <a href="?page=${currentPage + 1}&size=${pageSize}" class="page-link">Next</a>
		    </c:if>
		</div> 
</div>
</div>
</div>
</div>
</div>
<script>

$(document).ready(function() {
    $(".approval-btn").on('click', function() {
        var userId = $(this).data('userid');
        var value = $(this).data('value');

        var url = '${pageContext.request.contextPath}/updateUserRole.do';
        var params = {
            id: userId,
            appr_yn: value,
            page:${currentPage}
        };  

        if (value === 'ADMIN') {
            url = '${pageContext.request.contextPath}/grantAdminRole.do';
            params = { id: userId, page:${currentPage} };
        }   
        if (value === 'REMOVEADMIN') {
            url = '${pageContext.request.contextPath}/removeAdminRole.do';
            params = { id: userId, page:${currentPage} };
        }   

        var form = $('<form></form>');
        form.attr("method", "post");
        form.attr("action", url);

        $.each(params, function(key, val) {
            var input = $("<input>").attr("type", "hidden").attr("name", key).val(val);
            form.append(input);
        });

        $("body").append(form);
        form.submit();
    });
    
    $(".role-radio").on("change", function() {
        const userId = $(this).data("id");
        const newRole = $(this).val();
        const page = $(this).data("page");

        $.ajax({
          type: "POST",
          url: "${pageContext.request.contextPath}/updateUserType.do", 
          data: {
            id: userId,
            role: newRole,
            page: page
          },
          success: function(response) {
            console.log("권한 변경 성공:", userId, newRole);
            alert("The user's role has been updated successfully.");
            location.reload();
          },
          error: function(xhr, status, error) {
            console.error("권한 변경 실패:", error);
            alert("Failed to update the user's role. Please try again.");
          }
        });
      });
    
    $(".btn-delete").click(function() {
        const userId = $(this).data("id");
        if(confirm("Are you sure you want to delete this user?")) {
          $.ajax({
            type: "POST",
            url: "${pageContext.request.contextPath}/deleteUser.do",
            data: { id: userId },
			success: function(response) {
	            console.log("회원 삭제 성공:", userId);
	            alert("User has been deleted successfully.");
	            location.reload();
	          },
	          error: function(xhr, status, error) {
	            console.error("회원 삭제 실패:", error);
	            alert("Failed to delete user. Please try again.");
	          }
          });
        }
      });
    
    $(".btn-passwdReset").click(function() {
        const userId = $(this).data("id");
        if(confirm("Are you sure you want to reset the password?")) {
          $.ajax({
            type: "POST",
            url: "${pageContext.request.contextPath}/adminUserPwReset.do",
            data: { id: userId },
			success: function(response) {
	            console.log("초기화 성공:", userId);
	            alert("Password has been reset.\nTemporary password: aaaa1111\nPlease advise the user to change it after login.");
	          },
	          error: function(xhr, status, error) {
	            console.error("초기화 실패:", error);
	            alert("Failed to reset password.");
	          }
          });
        }
      });
});

function updateAuth(boardId, userType, authType, checkbox, userId) {
    var authValue = checkbox.checked ? 'Y' : 'N';

    var xhr = new XMLHttpRequest();
    xhr.open("POST", "${pageContext.request.contextPath}/admin/updateAuth.do", true);
    xhr.setRequestHeader("Content-Type", "application/json");

    xhr.onreadystatechange = function () {
        if (xhr.readyState === 4) {
            if (xhr.status === 200) {
                var response = JSON.parse(xhr.responseText);
                if (response.success) {
                    alert("Permission updated successfully.");
                } else {
                    alert("Failed to update permission.");
                }
            } else {
            	alert("Server error: " + xhr.status);
            }
        }
    };

    var data = JSON.stringify({
        boardId: boardId,
        userType: userType,
        authType: authType,
        authValue: authValue,
        userId: userId
    });

    xhr.send(data);
}



</script>
