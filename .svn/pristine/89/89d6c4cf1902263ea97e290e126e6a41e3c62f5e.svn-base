<%@ page language="java" contentType="text/html; charset=EUC-KR"
	pageEncoding="EUC-KR"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<body>
	<c:if test="${not empty errorMessage}">
		<script>
			alert("${errorMessage}");
		</script>
	</c:if>
<!-- 컨테이너 영역 -->
<div id="container">
	<div class="page-title-wrap visual img-joint">
		<div class="visual-filter"></div>
		<div class="inner">
			<!-- breadcrumb -->
			<nav class="breadcrumb-wrap" aria-label="브레드크럼">
				<ol class="breadcrumb">
					<li class="home"><a href="#" class="txt">Home</a></li>
					<li><a href="#" class="txt">Find Your ID</a></li>
				</ol>
			</nav>
			<!-- breadcrumb -->
			<!-- 페이지 타이틀 영역 -->
			<div class="visual-area">
				<h2 class="h-tit">Find Your ID</h2>
<!-- 						<p>This is an informational page summarizing Daejeon&#39;s key facts, strategic industries, major institutions, and contact information.</p> -->
			</div>
		<!-- //페이지 타이틀 영역 -->
			
		</div>  
	</div>  
	<div class="inner">
		<div class="conts-area">
			<div class="conts-wrap">
				<div class="conts-wrap log-in-box">
					<div class="txt-box bg-white-login">
							<div class="find-id-img"></div>
						<h2 class="section-title">Find Your ID</h2>

						<c:if test="${not empty errorMessage}">
							<p class="error-message">${errorMessage}</p>
						</c:if>

						<form action="findId.do" method="post">
							<div class="form-group">
								<label for="user_name">Name</label> <input type="text"
									name="name" id="user_name" class="form-control"
									placeholder="Enter your name" required />
							</div>

							<div class="form-group margin-b">  
								<label for="user_email">Email</label> <input type="email"
									name="email" id="user_email" class="form-control"
									placeholder="Enter your email" required />
							</div>
							<div class="form-group">
								<button type="submit" class="btn primary">Find ID</button>
							</div>
						</form>
				</div>
			</div>
		</div>
	</div>
	</div>
</body>
